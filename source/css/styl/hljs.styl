code{
  background-color: var(--bg-se);
  color: var(--hl-key);
  padding: 2px 5px;
  border-radius: 5px;
  margin-inline: 2px;
  vertical-align: middle;
}
pre{
  > code{
    background-color: none;
    color: var(--tx-pr);
    margin: 0;
    padding: 0;
  }
  overflow: auto;
  box-sizing: border-box;
  padding: 1em;
  border-radius: 8px;
  background-color: var(--bg-se);
  font-size: 14px;
}
.hljs{
  &-comment{
    color: var(--hl-com);
  }
  &-built_in{
    color: var(--hl-bui);
  }
  &-keyword{
    color: var(--hl-key);
  }
  &-string{
    color: var(--hl-str);
  }
  &-params{
    color: var(--hl-par);
  }
  &-title{
    color: var(--hl-tit);
  }
  &-variable{
    color: var(--hl-var);
  }
}