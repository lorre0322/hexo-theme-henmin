details{
  padding: 10px;
  margin: 1em 0;
  border-radius: 8px;
  background-color: var(--bg-se);
  summary{
    box-sizing: border-box;
    padding: 0 10px;
    list-style: none;
    display: flex;
  }
  > summary::-webkit-details-marker{display: none;}
  > summary::after {
    content:  '... ᕕ( ᐛ )ᕗ';
    margin-left: auto;
  }
  > div{
    padding: 10px;
  }
}
details[open] > summary::after {
  content:  'ᕕ( ᐛ )ᕗ';
}
.toc{
  .t-li{
    padding-left: 1.6em;
    padding-top: 10px;
    font-size: 14px;
    max-height: 300px;
    overflow: auto;
  }
  .t-li-level-3{
    display: none;
  }
  ol,li{
    margin: 0;
  }
  ol>li{
    padding-left: 0;
  }
}