*{
  -webkit-tap-highlight-color: transparent;
  user-select: none;
}
html{
  scroll-behavior: smooth;
  background-color: var(--bg-cl);
  color: var(--tx-cl);
  line-height: 2em;
  font-family: "宋体", serif;
  font-weight: 100;
  font-size: 16px;
}
body{
  margin: 0;
}
h1,h2,h3,h4,h5,h6{
  margin-top: .8em;
  margin-bottom: .2em;
}
h1{
  font-size: 1.6em;
}
h2{
  font-size: 1.5em;
}
h3{
  font-size: 1.4em;
}
h4,h5,h6{
  font-size: 1.2em;
}
ul,ol{
  margin: 1em 0;
  padding-left: 1.5em;
}
blockquote{
  margin: 1em 0;
  padding: 1em 2em;
  background: rgba(200,200,200,.1);
}
.icon{
  width: 1em;
  vertical-align: middle;
}
.wrap{
  min-width: 270px;
  max-width: 680px;
  margin-inline: auto;
  box-sizing: border-box;
}
img{
  max-width: 100%;
  min-height: 100px;
}
a{
  text-decoration: none;
  color: var(--tx-cl);
}
.list{
  ol,ul{
    margin: 0;
    padding: 0;
    list-style: none;
  }
  .ca-list-item,
  .tag-list-item{
    display: inline-block;
    padding: 5px 10px 5px 0;
  }
  .ca-list-link,
  .tag-list-link{
    padding: 0 5px;
  }
  .ca-list-count,
  .tag-list-count{
    font-size: 14px;
    color: var(--tx-se);
  }
}
.fo-li{
  text-align: right;
  list-style: none;
  margin: 0;
  padding: 0;
  font-size: 15px;
  li{
    display: inline-block;
  }
  li::after{
    content: "/";
    font-size: 13px;
    padding: 0 10px;
  }
}
.ar{
  padding-bottom: 10px;
}
.ar time::before{
  content: "/";
  padding: 0 15px;
  font-size: 13px;
  display: inline-block;
}
time{
  font-size: 15px;
  color: var(--tx-se);
}