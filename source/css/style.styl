@import "./styl/theme.styl";
@import "styl/global.styl";
@import "styl/paginator.styl";

#contain{
  margin-top: 50px;
  min-height: 70vh;
  padding: 10px;
  overflow: hidden;
}
.banner{
  margin: 0 -10px;
}
header{
  width: 100%;
  position: fixed;
  padding: 5px 2px;
  top: 0;
  left: 0;
  right: 0;
  background-color: var(--bg-cl);
  z-index: 10;
  .hd-menu{
    line-height:0;
  }
  svg{
    width: 38px;
  }
}
footer{
  padding: 10px;
}
@media screen and (max-width:680px) {
  header{
    bottom: 0;
    top: auto;
    text-align: right;
  }
  #contain{
    margin-top: 0;
  }
  footer{
    margin-bottom: 50px;
  }
}